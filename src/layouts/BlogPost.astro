		<script>
			document.addEventListener('DOMContentLoaded', () => {
				// Calculate actual reading time from article content
				const articleContent = document.querySelector('article .prose-custom');
				if (articleContent) {
					const text = articleContent.textContent || '';
					const wordCount = text.split(/\s+/).filter(word => word.length > 0).length;
					const readingTime = Math.max(1, Math.ceil(wordCount / 200)); // 200 words per minute
					
				// Update reading time display
				const readingTimeElement = document.querySelector('[aria-label*="Reading time"]');
				if (readingTimeElement) {
					readingTimeElement.setAttribute('aria-label', `Reading time: ${readingTime} minutes`);
					const timeText = readingTimeElement.querySelector('.reading-time-text');
					if (timeText) {
						timeText.textContent = `${readingTime} min read`;
					}
				}
				}

				// Add IDs to headings for TOC navigation
				const headings = document.querySelectorAll('article h2, article h3');
				headings.forEach((heading) => {
					const text = heading.textContent || '';
					const slug = text
						.toLowerCase()
						.replace(/[^\w\s-]/g, '')
						.replace(/\s+/g, '-')
						.replace(/-+/g, '-')
						.trim();
					if (!heading.id) {
						heading.id = slug;
					}
				});

				// Smooth scroll for TOC links
				const tocLinks = document.querySelectorAll('aside a[href^="#"], nav a[href^="#"]');
				tocLinks.forEach((link) => {
					link.addEventListener('click', (e) => {
						const href = link.getAttribute('href');
						if (href && href.startsWith('#')) {
							const target = document.querySelector(href);
							if (target) {
								e.preventDefault();
								const headerOffset = 80;
								const elementPosition = target.getBoundingClientRect().top;
								const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

								window.scrollTo({
									top: offsetPosition,
									behavior: window.matchMedia('(prefers-reduced-motion: reduce)').matches 
										? 'auto' 
										: 'smooth'
								});

								// Update URL without jumping
								history.pushState(null, '', href);

								// Focus the target heading for accessibility
								target.setAttribute('tabindex', '-1');
								if (target instanceof HTMLElement) {
									target.focus();
								}
								target.removeAttribute('tabindex');
							}
						}
					});
				});
			});
		</script>

