---
import AboutHeroImage from '../assets/blog-placeholder-about.jpg';
import BaseHead from '../components/BaseHead.astro';
import SEOHead from '../components/SEOHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_AUTHOR, SITE_DESCRIPTION } from '../consts';

const aboutTitle = `About ${SITE_AUTHOR.name}`;
const aboutDescription = SITE_AUTHOR.bio || SITE_DESCRIPTION;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={aboutTitle} description={aboutDescription} image={AboutHeroImage} />
		<SEOHead
			title={aboutTitle}
			description={aboutDescription}
			image={AboutHeroImage}
			schema={{
				type: 'Person',
				breadcrumbs: [
					{ name: 'Home', url: '/' },
					{ name: 'About', url: '/about' },
				],
			}}
		/>
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<h1>{aboutTitle}</h1>
						<hr />
					</div>
					<p>
						Welcome to Binary Brew, where I share war stories and reflections from the trenches of software development. 
						This is a space for exploring the intersection of code, systems, and the human side of technology.
					</p>
					<p>
						From debugging nightmares to DevOps adventures, from team dynamics to the psychology behind great software, 
						I document the journey of building, breaking, and learning in the world of technology.
					</p>
					<p>
						Join me as I brew stories of software, systems, and the souls behind the code.
					</p>
					{SITE_AUTHOR.social && (
						<div style="margin-top: 2em; padding-top: 1em; border-top: 1px solid rgb(var(--gray));">
							<h2>Connect</h2>
							<ul style="list-style: none; padding: 0;">
								{SITE_AUTHOR.social.github && (
									<li>
										<a href={`https://github.com/${SITE_AUTHOR.social.github}`} target="_blank" rel="noopener noreferrer">
											GitHub: {SITE_AUTHOR.social.github}
										</a>
									</li>
								)}
								{SITE_AUTHOR.social.twitter && (
									<li>
										<a href={`https://twitter.com/${SITE_AUTHOR.social.twitter.replace('@', '')}`} target="_blank" rel="noopener noreferrer">
											Twitter: {SITE_AUTHOR.social.twitter}
										</a>
									</li>
								)}
								{SITE_AUTHOR.social.linkedin && (
									<li>
										<a href={SITE_AUTHOR.social.linkedin} target="_blank" rel="noopener noreferrer">
											LinkedIn
										</a>
									</li>
								)}
							</ul>
						</div>
					)}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
