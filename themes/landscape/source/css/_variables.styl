// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
// Colors
color-default = #2E3440;         // Dark gray-blue for main text
color-grey = #4C566A;            // Medium gray-blue for secondary text
color-border = #D8DEE9;          // Light gray-blue for borders
color-link = #3B82C4;            // Slightly deeper blue for links (improves contrast)
color-link-hover = #336699;      // Darker blue for link hover effect
color-background = #ECEFF4;      // Very light gray-blue for background
color-sidebar-text = #3B4252;    // Dark gray-blue for sidebar text
color-widget-background = #E5E9F0; // Light gray-blue for widget backgrounds
color-widget-border = #D8DEE9;   // Light gray-blue for widget borders
color-footer-background = #2E3440; // Dark gray-blue for footer background
color-mobile-nav-background = #3B4252; // Dark gray-blue for mobile nav
color-twitter = #00aced;         // Standard Twitter blue
color-facebook = #3b5998;        // Standard Facebook blue
color-pinterest = #cb2027;       // Standard Pinterest red
color-linkedin = #0077B5;        // Standard LinkedIn blue


// Fonts
font-sans = -apple-system, BlinkMacSystemFont, "Didact Gothic",
    "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-serif = "Caudex", Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-icon = ForkAwesome
font-size = 16px
line-height = 1.6rem
line-height-title = 1.1rem

// Header
logo-size = 1.5rem
subtitle-size = 1rem
banner-height = 300px
banner-url = hexo-config("banner")

sidebar = hexo-config("sidebar")

// Layout
block-margin = 50px
article-padding = 20px
mobile-nav-width = 280px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"