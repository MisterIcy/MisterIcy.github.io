<!-- Page shell -->
<header class="sticky top-0 z-40 backdrop-blur-md bg-white/60 dark:bg-slate-800/70 border-b border-slate-200 dark:border-slate-700">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14">
      <div class="flex items-center gap-3">
        <a href="/" class="group inline-flex items-center gap-3 no-underline" aria-label="{{title}} home">
          <img src="/192-192.png" alt="{{title}}" width="34" height="34" class="opacity-90 dark:opacity-100 rounded-full">
          <span class="font-semibold text-lg tracking-tight">{{title}}</span>
        </a>
      </div>

      <nav aria-label="Primary" class="hidden md:flex items-center gap-4">
        <a href="/" class="text-sm font-medium hover:underline">Home</a>
        <a href="/archive" class="text-sm font-medium hover:underline">Archive</a>
        <a href="/categories" class="text-sm font-medium hover:underline">Categories</a>
        <a href="/about" class="text-sm font-medium hover:underline">About</a>
        
        <!-- Social Media Icons -->
        {{#if social.github}}
        <a href="https://github.com/{{social.github}}" target="_blank" rel="noopener noreferrer" aria-label="GitHub profile" class="p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
          <i class="fab fa-github w-5 h-5" aria-hidden="true"></i>
        </a>
        {{/if}}
        
        {{#if social.linkedin}}
        <a href="https://linkedin.com/in/{{social.linkedin}}" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn profile" class="p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
          <i class="fab fa-linkedin w-5 h-5" aria-hidden="true"></i>
        </a>
        {{/if}}
        
        <button id="theme-toggle" aria-label="Toggle dark mode" class="p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
          <i class="fas fa-moon w-5 h-5" aria-hidden="true"></i>
        </button>
      </nav>

      <!-- mobile menu -->
      <div class="md:hidden">
        <button id="mobile-menu-button" aria-label="Open menu" aria-expanded="false" class="p-2 rounded-md focus-visible:ring-2 focus-visible:ring-accent transition-all duration-200 bg-gradient-to-br from-accent to-slate-700 text-white hover:opacity-90">â˜°</button>
      </div>
    </div>
  </div>
</header>

<!-- Mobile nav panel (visually hidden on larger screens) -->
<div id="mobile-menu" class="fixed inset-0 z-30 bg-black/40 hidden md:hidden" aria-hidden="true">
  <div class="absolute right-0 top-0 w-3/4 max-w-xs h-full bg-white dark:bg-slate-800 p-6 shadow-lg">
    <button id="mobile-menu-close" aria-label="Close menu" class="mb-6 px-4 py-2 rounded-md bg-gradient-to-br from-accent to-slate-700 text-white hover:opacity-90 transition-all duration-200">Close</button>
      <nav class="flex flex-col gap-3" aria-label="Mobile primary navigation">
        <a href="/" class="text-base font-medium">Home</a>
        <a href="/archive" class="text-base font-medium">Archive</a>
        <a href="/categories" class="text-base font-medium">Categories</a>
        <a href="/about" class="text-base font-medium">About</a>
        
        <!-- Social Media Icons for Mobile -->
        <div class="flex items-center gap-3 mt-4 pt-4 border-t border-slate-200 dark:border-slate-700">
          {{#if social.github}}
          <a href="https://github.com/{{social.github}}" target="_blank" rel="noopener noreferrer" aria-label="GitHub profile" class="p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
            <i class="fab fa-github w-5 h-5" aria-hidden="true"></i>
          </a>
          {{/if}}
          
          {{#if social.linkedin}}
          <a href="https://linkedin.com/in/{{social.linkedin}}" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn profile" class="p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
            <i class="fab fa-linkedin w-5 h-5" aria-hidden="true"></i>
          </a>
          {{/if}}
        </div>
        
        <button id="mobile-theme-toggle" aria-label="Toggle dark mode" class="text-base font-medium text-left p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
          <i class="fas fa-moon w-5 h-5 mr-2" aria-hidden="true"></i>Toggle theme
        </button>
      </nav>
  </div>
</div>
