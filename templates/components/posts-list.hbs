<!-- Posts list -->
<section id="posts" class="lg:col-span-2" aria-labelledby="posts-heading">
  <h2 id="posts-heading" class="sr-only">Recent posts</h2>
  

  <!-- Posts container -->
  <div id="posts-container">
    {{#each posts}}
    <article class="mb-8 post-item group p-4 sm:p-6 rounded-lg border border-slate-200 dark:border-slate-800 hover:shadow-lg transition-shadow" tabindex="0" data-title="{{title}}" data-content="{{excerpt}}" data-tags="{{join tags " "}}">
      <header class="flex items-start gap-3">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 rounded-md bg-gradient-to-br from-accent to-slate-700 flex items-center justify-center text-white font-semibold">{{substring title 0 2}}</div>
        </div>
        <div>
          <h3 class="text-lg font-semibold">
            <a href="/posts/{{slug}}" class="hover:underline">{{title}}</a>
          </h3>
          <p class="text-sm text-muted mt-1">
            {{formatDate date}} • {{readingTime}} min read
            {{#if categories}}
              • <span class="text-blue-600 dark:text-blue-400">{{join categories ", "}}</span>
            {{/if}}
          </p>
        </div>
      </header>

      <p class="mt-3 text-slate-800 dark:text-slate-300">{{excerpt}}</p>

      <div class="mt-4 flex flex-col gap-3">
        <div class="flex items-center gap-3">
          <a class="inline-flex items-center text-sm font-medium hover:underline" href="/posts/{{slug}}">Read</a>
          <a class="text-sm text-muted" href="#">Share</a>
        </div>
        <div class="w-full">
          {{> tags}}
        </div>
      </div>
    </article>
    {{/each}}

    {{#unless posts}}
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No posts found. Create some markdown files in the content directory!</p>
    </div>
    {{/unless}}
  </div>
</section>
