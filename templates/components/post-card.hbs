<article class="group p-4 sm:p-6 rounded-lg border border-slate-200 dark:border-slate-800 hover:shadow-lg transition-shadow" tabindex="0">
  <header class="flex items-start gap-3">
    <div class="flex-shrink-0">
      <div class="w-12 h-12 rounded-md bg-gradient-to-br from-accent to-slate-700 flex items-center justify-center text-white font-semibold">{{substring title 0 2}}</div>
    </div>
    <div>
      <h3 class="text-lg font-semibold">
        <a href="/posts/{{slug}}" class="hover:underline">{{title}}</a>
      </h3>
      <p class="text-sm text-muted mt-1">{{formatDate date}} â€¢ {{readingTime}} min read</p>
    </div>
  </header>

  <p class="mt-3 text-slate-800 dark:text-slate-300">{{excerpt}}</p>

  <div class="mt-4 flex items-center gap-3">
    <a class="inline-flex items-center text-sm font-medium hover:underline" href="/posts/{{slug}}">Read</a>
    <a class="text-sm text-muted" href="#">Share</a>
  </div>
</article>
