{{#if structuredData}}
<!-- Structured Data (JSON-LD) for SEO -->
<script type="application/ld+json">
{{#if isArticle}}
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{post.title}}",
  "description": "{{post.excerpt}}",
  "image": "{{#if post.image}}{{post.image}}{{else}}{{url}}/og-image.jpg{{/if}}",
  "author": {
    "@type": "Person",
    "name": "{{author}}",
    "url": "{{url}}",
    "sameAs": [
      "{{#if social.github}}https://github.com/{{social.github}}{{/if}}",
      "{{#if social.linkedin}}https://linkedin.com/in/{{social.linkedin}}{{/if}}"
    ]
  },
  "publisher": {
    "@type": "Organization",
    "name": "{{title}}",
    "url": "{{url}}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{url}}/logo.png"
    }
  },
  "datePublished": "{{post.date}}",
  "dateModified": "{{post.date}}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{url}}/posts/{{post.slug}}"
  },
  "url": "{{url}}/posts/{{post.slug}}",
  "wordCount": "{{post.wordCount}}",
  "timeRequired": "PT{{post.readingTime}}M",
  "articleSection": "{{#if post.categories}}{{join post.categories ", "}}{{else}}Technology{{/if}}",
  "keywords": "{{#if post.tags}}{{join post.tags ", "}}{{/if}}",
  "inLanguage": "{{language}}",
  "isPartOf": {
    "@type": "Blog",
    "name": "{{title}}",
    "url": "{{url}}",
    "description": "{{description}}",
    "publisher": {
      "@type": "Organization",
      "name": "{{title}}",
      "url": "{{url}}"
    }
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{url}}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Blog",
        "item": "{{url}}"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{post.title}}",
        "item": "{{url}}/posts/{{post.slug}}"
      }
    ]
  }
}
{{else}}
[
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "{{title}}",
    "url": "{{url}}",
    "description": "{{description}}",
    "inLanguage": "{{language}}",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "{{url}}/search?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "{{title}}",
    "url": "{{url}}",
    "description": "{{description}}",
    "inLanguage": "{{language}}",
    "publisher": {
      "@type": "Organization",
      "name": "{{title}}",
      "url": "{{url}}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{url}}/logo.png"
      }
    },
    "author": {
      "@type": "Person",
      "name": "{{author}}",
      "url": "{{url}}",
      "sameAs": [
        "{{#if social.github}}https://github.com/{{social.github}}{{/if}}",
        "{{#if social.linkedin}}https://linkedin.com/in/{{social.linkedin}}{{/if}}"
      ]
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "{{author}}",
    "url": "{{url}}",
    "sameAs": [
      "{{#if social.github}}https://github.com/{{social.github}}{{/if}}",
      "{{#if social.linkedin}}https://linkedin.com/in/{{social.linkedin}}{{/if}}"
    ],
    "knowsAbout": [
      "{{#if posts}}{{#each posts}}{{#if tags}}{{join tags ", "}}{{/if}}{{/each}}{{/if}}"
    ]
  },
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "{{title}}",
    "url": "{{url}}",
    "description": "{{description}}",
    "inLanguage": "{{language}}",
    "isPartOf": {
      "@type": "WebSite",
      "name": "{{title}}",
      "url": "{{url}}"
    },
    "author": {
      "@type": "Person",
      "name": "{{author}}",
      "url": "{{url}}"
    },
    "datePublished": "{{#if posts}}{{posts.0.date}}{{/if}}",
    "dateModified": "{{#if posts}}{{posts.0.date}}{{/if}}"
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{url}}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Archive",
        "item": "{{url}}/archive"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "Categories",
        "item": "{{url}}/categories"
      },
    ]
  }
]
{{/if}}
</script>
{{/if}}
