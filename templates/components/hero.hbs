<!-- Hero / Featured -->
<section class="mb-8">
  <div class="relative rounded-xl p-6 sm:p-8 overflow-hidden bg-circuit">
    <!-- Accessible background pattern using CSS -->
    <div class="absolute inset-0 bg-circuit"></div>
    <!-- Content with proper contrast -->
    <div class="relative z-10">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex-1">
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-2">{{author}}</p>
          <h1 class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-slate-900 dark:text-slate-100 leading-tight">
            {{headline}}
          </h1>
          <p class="mt-3 max-w-2xl text-slate-700 dark:text-slate-300 text-lg leading-relaxed">
            {{description}}
          </p>
        </div>
        
        <div class="flex items-center gap-3 mt-6 sm:mt-0">
          <div id="terminal" class="w-full sm:w-80 lg:w-96 rounded-md overflow-hidden shadow-lg border border-gray-500/50 bg-gray-900/40 backdrop-blur-xs text-gray-100 font-mono text-base relative z-10">
            <!-- Title Bar -->
            <div class="title-bar">
              <div class="title-dots"><span></span><span></span><span></span></div>
              <div class="win-title w-full justify-between items-center hidden">
                <span class="ml-1">C:\\WINDOWS\\system32\\cmd.exe</span>
                <div class="win-buttons"><span>_</span><span>[]</span><span>X</span></div>
              </div>
              <div class="linux-title w-full justify-between items-center hidden">
                <span class="ml-1">Terminal â€” user@linux</span>
                <div class="window-buttons"><span></span><span></span><span></span></div>
              </div>
            </div>
            
            <!-- Terminal content -->
            <div class="p-6">
              <p><span class="text-green-400">user@machine</span>:<span class="text-blue-400">~</span>$ cat latest-post.md</p>
              <p class="mt-1 text-gray-300">
                <span class="typewriter">{{#if latestPost}}{{latestPost.title}}{{else}}Reverse Engineering Hexplore Game Texts...{{/if}}</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
